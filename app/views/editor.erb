    <script src="javascripts/keyboard_editor.js"></script>
    <link rel="stylesheet" href="stylesheets/editor.css">
    
    <% if ViewHelpers.is_logged_in?(session) %>
        <p>Welcome <%= @user.username %></p>
    <% end %>

    <div class="row justify-content-between mt-5">
        <div class="col-6 text-left">
            <%= File.read('./public/images/keyboard.svg') %>
        </div>
        <div class="col-3 bg-light text-right">
            <form style="height: 100%" action="/builds" method="POST">
                <div style="height: 100%" class="d-flex flex-column justify-content-between" id="form-inner">
                    <div class="d-flex flex-column align-items-start" id="input-group">
                        <div class="pt-2 mt-0">
                            <label class="px-2" for="keyboard_name">Name</label>
                            <input type="text" id="keyboard_name" name="keyboard_name"><br>
                        </div>
                        
                        <div class="pt-2">
                            <label class="px-2" for="keycaps_color">Keycaps</label>
                            <select name="keycaps" id="keycaps_color" onchange="changeKeyColor()">
                                <option value="red">Red</option>
                                <option value="blue">Blue</option>
                                <option value="Green">Green</option>
                            </select><br>
                        </div>

                        <div class="pt-2">
                            <label class="px-2" for="case_color">Case</label>
                            <select name="case" id="case_color" onchange="changeCaseColor()">
                                <option value="red">Red</option>
                                <option value="blue">Blue</option>
                                <option value="Green">Green</option>
                            </select><br>
                        </div>

                        <div class="pt-2">
                            <label class="px-2" for="cable_color">Cable</label>
                            <select name="cable" id="cable_color" onchange="changeCableColor()">
                                <option value="red">Red</option>
                                <option value="blue">Blue</option>
                                <option value="Green">Green</option>
                            </select><br>
                        </div>
                    </div>

                    <% if session[:user_id] %>
                        <div class="d-flex mx-auto mb-2">
                            <input class="btn btn-primary" type="submit" value="Submit">
                        </div>
                    <% end %>
                </div>

            </form>
        <div>
    <div>

