                                <option value="Green">Green</option>
                                <option value="BurlyWood">Burly Wood</option>
                                <option value="Coral">Coral</option>
                                <option value="DarkCyan">Dark Cyan</option>
                                <option value="DarkOliveGreen">DarkOliveGreen</option>
                                <option value="DarkOrchid">Dark Orchid</option>
                                <option value="GoldenRod">GoldenRod</option>
                                <option value="HotPink">Hot Pink</option>
                                <option value="LightSeaGreen">Light Sea Green</option>
                                <option value="Salmon">Salmon</option>
                                <option value="Orange">Orange</option>
                                <option value="SlateGrey">Slate Grey</option>
                            </select><br>
                        </div>

                        <div class="pt-2">
                            <label class="px-2" for="cable_color">Cable</label>
                            <select name="cable" id="cable_color" onchange="changeCableColor()">
                                <option value="AliceBlue">AliceBlue</option>
                                <option value="Crimson">Crimson</option>
                                <option value="HotPink">Hot Pink</option>
                                <option value="GoldenRod">GoldenRod</option>
                                <option value="Crimson">Crimson</option>
                                <option value="Orange">Orange</option>
                                <option value="LightSeaGreen">Light Sea Green</option>
                                <option value="Lime">Lime</option>
                            </select><br>
                        </div>
                    </div>

                    <div class="d-flex mx-auto mb-2">
                        <input id="submit_btn" class="btn btn-primary" type="submit" value="Submit">
                    </div>
                </div>

            </form>
