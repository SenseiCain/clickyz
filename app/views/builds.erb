<div class="container mt-4 col-10" id="builds_container">

    <style>
        .card-body-img {
            width: 90px;
            height: 90px;
        }

        img{
            width: 100%;
            height: 100%;
        }
    </style>

    <div class="accordian-container">
        <div id="accordion">
    
            <% @builds.map do |b| %>

                    <div class="card">
                        <div class="card-header" id="<%= 'heading_' + b.id.to_s %>">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#<%= 'card_' + b.id.to_s %>" aria-expanded="false" aria-controls="<%= 'card_' + b.id.to_s %>">
                                    <%= b.name %>
                                </button>
                            </h5>
                        </div>

                        <div id="<%= 'card_' + b.id.to_s %>" class="collapse" aria-labelledby="<%= 'heading_' + b.id.to_s %>" data-parent="#accordion">
                            <div class="card-body d-flex justify-content-between">
                                <div class="card-body-info d-flex align-items-center">
                                    <div class="card-body-img">
                                        <img src="images/keyboard_saves/<%= b.img_file %>">
                                    </div>
                                    <ul class="my-0">
                                        <li>Case: <%= b.case %></li>
                                        <li>Keycaps: <%= b.keycaps %></li>
                                        <li>Cable: <%= b.cable %></li>
                                    </ul>
                                </div>
                                <div class="card-options d-flex align-items-end">
                                    <button type="button" class="btn btn-primary mx-1">Edit</button>
                                    <form action="/builds/<%= b.id %>" method="POST">
                                        <input id="hidden" type="hidden" name="_method" value="DELETE">
                                        <input class="btn btn-danger mx-1" type="submit" value="delete">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    

            <% end %>

            

        </div>
    </div>

</div>