<link rel="stylesheet" href="stylesheets/login.css">
<script src="/javascripts/login.js"></script>

<div class="login-form mx-auto py-5">
    <form id="login-form" action="/sessions" method="POST">
        <h2 class="text-center">Log in</h2>      
        <div id="input-groups"> 
            <div class="form-group">
                <input type="text" name="email" id="email" class="form-control" placeholder="Email" required="required">
            </div>
            <div class="form-group">
                <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="required">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
        </div>      
    </form>
    <p id="register_btn" class="text-center" onClick="changeToRegistration()">Create an Account</p>
</div>