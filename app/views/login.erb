<form action="/sessions" method="POST">

    <h2>Log In</h2>

    <label for="login_email">Email: </label>
    <input type="text" name="email" id="login_email"><br>

    <label for="login_password">Password: </label>
    <input type="password" name="password" id="login_password"><br>

    <input type="submit">
</form>

<form action="/register" method="POST">

    <h2>Register</h2>

    <label for="registration_username">Name: </label>
    <input type="text" name="username" id="registration_username"><br>

    <label for="registration_email">Email: </label>
    <input type="text" name="email" id="registration_email"><br>

    <label for="registration_password">Password: </label>
    <input type="password" name="password" id="registration_password"><br>

    <input type="submit">
</form>